# Database Connection
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/rto_compliance_hub?schema=public"

# Optional: Connection pooling URL (for production with PgBouncer or similar)
# DATABASE_URL_POOLED="postgresql://user:password@pgbouncer:6432/database?schema=public"

# Node Environment
NODE_ENV="development"

# Application Settings
APP_PORT=3000
APP_URL="http://localhost:3000"
FRONTEND_URL="http://localhost:5173"

# JWT Authentication
# Generate secure secrets with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="change-me-in-production-use-long-random-string"
JWT_REFRESH_SECRET="change-me-in-production-use-different-long-random-string"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Encryption
# Generate secure key with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY="change-me-in-production-use-32-byte-hex-string"

# Xero Integration
# Get credentials from https://developer.xero.com/
XERO_CLIENT_ID=""
XERO_CLIENT_SECRET=""
XERO_REDIRECT_URI="http://localhost:3000/api/v1/sync/xero/callback"

# External API Keys (for future integrations)
# ACCELERATE_API_KEY=""

# JotForm Integration
JOTFORM_API_KEY=""
JOTFORM_WEBHOOK_SECRET=""

# Accelerate LMS API Configuration
ACCELERATE_API_URL="https://api.acceleratelms.com/v1"
ACCELERATE_API_KEY=""
ACCELERATE_ORGANIZATION_ID=""

