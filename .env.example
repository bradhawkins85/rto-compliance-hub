# Database Connection
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/rto_compliance_hub?schema=public"

# Optional: Connection pooling URL (for production with PgBouncer or similar)
# DATABASE_URL_POOLED="postgresql://user:password@pgbouncer:6432/database?schema=public"

# Node Environment
NODE_ENV="development"

# Application Settings
APP_PORT=3000
APP_URL="http://localhost:3000"
FRONTEND_URL="http://localhost:5173"

# JWT Authentication
# Generate secure secrets with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="change-me-in-production-use-long-random-string"
JWT_REFRESH_SECRET="change-me-in-production-use-different-long-random-string"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# External API Keys (for future integrations)
# XERO_CLIENT_ID=""
# XERO_CLIENT_SECRET=""
# ACCELERATE_API_KEY=""
# JOTFORM_API_KEY=""

# Google Drive Integration
# Get these from Google Cloud Console (https://console.cloud.google.com/)
# Enable Google Drive API and create OAuth 2.0 credentials
GOOGLE_DRIVE_CLIENT_ID=""
GOOGLE_DRIVE_CLIENT_SECRET=""
GOOGLE_DRIVE_REDIRECT_URI="http://localhost:3000/api/v1/drive/oauth/callback"
# Root folder ID in Google Drive where files will be organized
GOOGLE_DRIVE_ROOT_FOLDER_ID=""
# Maximum file size in bytes (default: 100MB)
GOOGLE_DRIVE_MAX_FILE_SIZE="104857600"
