# Database Connection
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/rto_compliance_hub?schema=public"

# Optional: Connection pooling URL (for production with PgBouncer or similar)
# DATABASE_URL_POOLED="postgresql://user:password@pgbouncer:6432/database?schema=public"

# Node Environment
NODE_ENV="development"

# Application Settings
APP_PORT=3000
APP_URL="http://localhost:3000"
FRONTEND_URL="http://localhost:5173"

# JWT Authentication
# Generate secure secrets with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="change-me-in-production-use-long-random-string"
JWT_REFRESH_SECRET="change-me-in-production-use-different-long-random-string"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Encryption
# Generate secure key with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY="change-me-in-production-use-32-byte-hex-string"

# Xero Integration
# Get credentials from https://developer.xero.com/
XERO_CLIENT_ID=""
XERO_CLIENT_SECRET=""
XERO_REDIRECT_URI="http://localhost:3000/api/v1/sync/xero/callback"

# External API Keys (for future integrations)
# ACCELERATE_API_KEY=""

# JotForm Integration
JOTFORM_API_KEY=""
JOTFORM_WEBHOOK_SECRET=""

# Accelerate LMS API Configuration
ACCELERATE_API_URL="https://api.acceleratelms.com/v1"
ACCELERATE_API_KEY=""
ACCELERATE_ORGANIZATION_ID=""

# Google Drive Integration
# Get credentials from https://console.cloud.google.com/
GOOGLE_DRIVE_CLIENT_ID=""
GOOGLE_DRIVE_CLIENT_SECRET=""
GOOGLE_DRIVE_REDIRECT_URI="http://localhost:3000/api/v1/files/google-drive/callback"
GOOGLE_DRIVE_ROOT_FOLDER_ID="" # Optional: specify a root folder for all uploads

# Email Configuration
# Email provider: 'smtp' for generic SMTP, 'sendgrid' for SendGrid, 'ses' for AWS SES
EMAIL_PROVIDER="smtp"

# SMTP Configuration (for generic SMTP or development)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=""
SMTP_PASSWORD=""

# SendGrid Configuration (alternative to SMTP)
# Get API key from https://sendgrid.com/
SENDGRID_API_KEY=""

# AWS SES Configuration (alternative to SMTP)
# Get credentials from AWS Console
AWS_SES_REGION="us-east-1"
AWS_SES_ACCESS_KEY_ID=""
AWS_SES_SECRET_ACCESS_KEY=""

# Email Settings
EMAIL_FROM_ADDRESS="noreply@rto-compliance-hub.com"
EMAIL_FROM_NAME="RTO Compliance Hub"
EMAIL_REPLY_TO=""
EMAIL_MAX_RETRIES=3
EMAIL_RETRY_DELAY_MS=60000
EMAIL_RATE_LIMIT_PER_SECOND=10

# Email Features
EMAIL_ENABLE_TRACKING=true
EMAIL_ENABLE_UNSUBSCRIBE=true
